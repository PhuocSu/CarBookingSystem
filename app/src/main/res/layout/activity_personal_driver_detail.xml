<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".personal_driver_detail"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CẬP NHẬT TÀI KHOẢN TÀI XẾ"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/red" />

        <!-- Đường gạch ngang -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_marginTop="2dp"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Email: "
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Nhập Email"
                android:layout_weight="3"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:enabled="false"/>

        </LinearLayout>



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Tên người dùng: "
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <EditText
                android:id="@+id/txtTenNguoiDung"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Nhập tên người dùng"
                android:layout_weight="3"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:enabled="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Giới tính: "
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <EditText
                android:id="@+id/txtGioiTinh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Nhập giới tính"
                android:layout_weight="3"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:enabled="false"/>

        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Số điện thoại: "
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <EditText
                android:id="@+id/txtSDT"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Nhập số điện thoại"
                android:layout_weight="3"
                android:maxLines="1"
                android:inputType="number"
                android:singleLine="true"
                android:enabled="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="CCCD: "
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <EditText
                android:id="@+id/txtCCCD"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Nhập căn cước công dân"
                android:layout_weight="3"
                android:maxLines="1"
                android:inputType="number"
                android:singleLine="true"
                android:enabled="false"/>

        </LinearLayout>



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Biển số xe: "
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <EditText
                android:id="@+id/txtBienSoXe"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Nhập biển số xe"
                android:layout_weight="3"
                android:maxLines="1"
                android:inputType="text"
                android:singleLine="true"
                android:enabled="false"/>

        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnChinhSua"
                android:text="Chỉnh sửa"
                android:textSize="25dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/blue"
                android:textColor="@color/gold"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCapNhat"
                android:text="Cập nhật"
                android:textSize="25dp"
                android:backgroundTint="@color/blue"
                android:textColor="@color/gold"
                android:enabled="false"
                />
        </LinearLayout>




    </LinearLayout>

</LinearLayout>